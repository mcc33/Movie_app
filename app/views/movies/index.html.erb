<h1>Movies</h1>
<p>Search and Find Movies </p>

<div class="col-md-12">
  <div class="table-responsive">
    <table class="table table-hover"
<% @movies.each do |movie| %>
  <tr>
    <td> <%= movie.title %> </td>
    <td>
        <%=link_to 'Show', movie_path(movie), class: 'btn btn-default btn-xs' %>
        <%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-success btn-xs' %>
  </tr>
<% end %>
    </table>
    <%= link_to "Add new movie", new_movie_path, class: 'btn'  %>
  </div>
</div>
